<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_toast_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/defined_toast_style"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white_transparent_90"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_toast_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/tv_toast_text"
        android:src="@drawable/ic_baseline_like_red" />


</RelativeLayout>