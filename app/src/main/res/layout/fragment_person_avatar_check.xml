<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_d"
    tools:context=".menu.person.Fragment_AvatarView">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_photo_avatar_check_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"

        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/iv_photo_avatar_check_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@color/black_transparent_20"
            android:src="@drawable/ic_baseline_arrow_back_white" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_photo_avatar_check_avatar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

</RelativeLayout>