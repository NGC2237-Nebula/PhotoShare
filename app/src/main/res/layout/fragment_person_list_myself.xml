<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background_deep">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/rl_list_myself_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparent_20">

            <TextView
                android:id="@+id/tv_list_myself_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="18dp"
                android:text="@string/person_list_fragment_updata_title"
                android:textColor="@color/white_transparent_90"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_list_myself_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_arrow_back_white" />

            <TextView
                android:id="@+id/tv_list_list_myself_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_list_myself_title"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:text="@string/person_list_fragment_updata_title_hint"
                android:textColor="@color/white_transparent_60"
                android:textSize="13sp" />

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_list_list_myself_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_list_fragment_updata_hint"
            android:textColor="@color/white_transparent_60"
            android:textSize="17sp" />


        <ListView
            android:id="@+id/lv_list_myself_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_list_myself_title"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>